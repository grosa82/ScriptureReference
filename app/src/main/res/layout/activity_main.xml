<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="Fill the information below:" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/titleTextView" />

    <TextView android:text="Book"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@+id/titleTextView"
        android:layout_marginTop="30dp"
        android:id="@+id/bookTextView"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bookEditText"
        android:layout_below="@+id/bookTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:width="300dp"/>

    <TextView android:text="Chapter"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@+id/bookEditText"
        android:layout_marginTop="20dp"
        android:id="@+id/chapterTextView"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chapterEditText"
        android:layout_below="@+id/chapterTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:width="300dp"/>

    <TextView android:text="Verse"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@+id/chapterEditText"
        android:layout_marginTop="20dp"
        android:id="@+id/verseTextView"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/verseEditText"
        android:layout_below="@+id/verseTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:width="300dp"/>

    <Button android:text="Share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shareButton"
        android:layout_below="@+id/verseEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:width="300dp"
        android:onClick="share"/>

</RelativeLayout>
